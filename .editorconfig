# Top-most EditorConfig file
root = true

# Set default charset to UTF-8
[*]
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2

# End of line settings
[*]
end_of_line = crlf

# Trim trailing whitespace
[*]
trim_trailing_whitespace = true

# Ensure a newline at the end of the file
[*]
insert_final_newline = true
